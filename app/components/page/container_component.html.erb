<%= render UI::ContainerComponent.new do %>

  <% if render_breadcrumbs? %>
    <% if breadcrumbs? %>
      <%= render breadcrumbs %>
    <% else %>
      <%= render UI::BreadcrumbsComponent.new(page: @page) %>
    <% end %>
  <% end %>

  <% if title? %>
    <%= title %>
  <% end %>

  <%= content %>

  <% if authors? %>
    <%= authors %>
  <% else %>
    <%= render Page::AuthorsComponent.new(paths: credit_paths) %>
  <% end %>
<% end %>
