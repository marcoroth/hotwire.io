<%= render UI::ContainerComponent.new do %>
  <% if breadcrumbs? %>
    <%= render breadcrumbs %>
  <% end %>

  <% if title? %>
    <%= title %>
  <% end %>

  <%= content %>

  <% if authors? %>
    <%= authors %>
  <% else %>
    <%= render Page::AuthorsComponent.new(paths: credit_paths) %>
  <% end %>
<% end %>
