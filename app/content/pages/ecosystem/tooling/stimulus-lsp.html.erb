    <section class="mx-auto flex max-w-screen-xl flex-col items-center justify-center lg:flex-row lg:justify-start">
      <div class="-ml-3 flex max-w-2xl flex-shrink-0 items-center justify-center overflow-hidden rounded-lg border border-white/5 shadow-2xl shadow-black/50">
